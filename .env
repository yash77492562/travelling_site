# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://admin:password123@localhost:27017/traveldb?authSource=admin


# URLs
APP_BASE_URL=http://localhost:3001/
FRONTEND_URL=http://localhost:3001

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
CRYPTO_SECRET_KEY=your-crypto-secret-key-here

# Razorpay (Test Keys for development)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Email Configuration (Use Gmail SMTP for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@packershaven.com
FROM_NAME=Packers Haven

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET_NAME=packers-haven-uploads

# Zoho CRM Integration
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token

# File Upload Settings
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=./uploads

# Application Settings
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
BOOKING_CANCELLATION_HOURS=48
PAYMENT_TIMEOUT_MINUTES=15
